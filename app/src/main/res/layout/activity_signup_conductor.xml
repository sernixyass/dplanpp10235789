<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignupConductorActivity"
    android:background="@color/generalTextCol">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal">


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="7dp"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <RadioButton
                    android:id="@+id/radio_male_con"
                    android:text="Male"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:checked="true"/>

                <RadioButton
                    android:id="@+id/radio_female_con"
                    android:text="Female"
                    android:textSize="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"/>


            </RadioGroup>

        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginVertical="7dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Full Name:"
                android:layout_weight="0.4"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/fullNameSignupCId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/input_white_bg"
                android:padding="15dp"
                android:layout_weight="0.6"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginVertical="7dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Email:"
                android:layout_weight="0.4"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/emailSignupCId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/input_white_bg"
                android:padding="15dp"
                android:layout_weight="0.6"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginVertical="7dp"
            >

            <TextView
                android:text="@string/birth_date"
                android:id="@+id/birthdateSignupCId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:inputType="textEmailAddress"
                android:background="@drawable/input_white_bg"
                android:padding="15dp"
                android:layout_weight="0.6"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginVertical="7dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Phone:"
                android:layout_weight="0.4"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/phoneSignupCId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:inputType="phone"
                android:background="@drawable/input_white_bg"
                android:padding="15dp"
                android:layout_weight="0.6"
                />
        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:background="@drawable/input_white_bg"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginVertical="7dp"
            >
            <TextView
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="Wilaya:"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:layout_weight=".5"
                />
            <Spinner
                android:gravity="center"
                android:layout_weight=".5"
                android:id="@+id/wilayaSignupCId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:inputType="text"
                tools:ignore="Autofill" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginVertical="7dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Password:"
                android:layout_weight="0.4"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/passwordSignupCId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                android:background="@drawable/input_white_bg"
                android:padding="15dp"
                android:layout_weight="0.6"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginVertical="7dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">



            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-retype- Password:"
                android:layout_weight="0.4"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/passwordSignupCId2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:inputType="textPassword"
                android:background="@drawable/input_white_bg"
                android:padding="15dp"
                android:layout_weight="0.6"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1"
            android:layout_marginVertical="7dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Car Model:"
                android:layout_weight="0.4"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/carModelSignupId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:inputType="text"
                android:background="@drawable/input_white_bg"
                android:padding="15dp"
                android:layout_weight="0.6"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginVertical="7dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Car Unique Number:"
                android:layout_weight="0.4"
                android:textStyle="bold"/>


            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1"
                >

                <EditText
                    android:gravity="center"
                    android:id="@+id/carKey1SignupId"
                    android:maxLength="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:background="@drawable/input_white_bg"
                    android:padding="15dp"
                    android:layout_weight=".5"
                    />
                <EditText
                    android:gravity="center"
                    android:id="@+id/carKey2SignupId"
                    android:maxLength="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:background="@drawable/input_white_bg"
                    android:padding="15dp"
                    android:layout_weight=".3"
                    android:layout_marginLeft="3dp"
                    />
                <EditText
                    android:gravity="center"
                    android:id="@+id/carKey3SignupId"
                    android:maxLength="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:inputType="number"
                    android:background="@drawable/input_white_bg"
                    android:padding="15dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight=".2"
                    />


            </LinearLayout>
        </LinearLayout>


        <Button
            android:id="@+id/SignUpCBtnId"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:text="@string/signup_txt"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"


            android:textColor="@color/generalTextCol"
            android:background="@drawable/button_bg"
            />
        <ProgressBar
            android:id="@+id/signupC_progresbar"
            android:visibility="gone"
            android:indeterminateTint="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/LogInCTxtBtnId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_txt_btn"
            android:layout_marginBottom="60dp"
            />

    </LinearLayout>

</ScrollView>






</RelativeLayout>