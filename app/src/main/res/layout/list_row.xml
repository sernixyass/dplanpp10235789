<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">


    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1.2">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="0.4"
                    android:weightSum="1"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/startTxtP"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Depart"
                        android:textSize="18sp"
                        android:drawableLeft="@drawable/ic_startpoint"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"/>

                    <ImageView
                        android:id="@+id/arrow_123"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_arrow"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/endTxtP"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Arrive"
                        android:textSize="18sp"
                        android:drawableLeft="@drawable/ic_endpoint"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textStyle="bold"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="0.4"
                    android:weightSum="1"
                    android:gravity="center">


                    <TextView
                        android:text="4/4"
                        android:id="@+id/nbr_passenger_places"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:drawableLeft="@drawable/ic_person_black"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />



                    <TextView
                        android:id="@+id/conductorSign"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.3"
                        android:drawableLeft="@drawable/ic_car_mod"
                        android:gravity="center"
                        />

                    <TextView
                        android:text="00:00"
                        android:id="@+id/hourTripID"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />



                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=  "0.4"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:weightSum="7">
                    <TextView
                        android:id="@+id/satID"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:text="SAT"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/sunID"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:text="SUN"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/monID"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:text="MON"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/tueID"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:text="TUE"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/wedID"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:text="WED"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/thuID"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:text="THU"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />
                    <TextView
                        android:id="@+id/friID"
                        android:gravity="center"
                        android:textSize="12dp"
                        android:text="FRI"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent" />

                </LinearLayout>




        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>