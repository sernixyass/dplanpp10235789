<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileConductorFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:id="@+id/cardVV"
                    android:layout_margin="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/White"
                    android:elevation="4dp"
                    android:paddingBottom="3dp"
                    android:paddingTop="5dp">

                    <LinearLayout
                        android:id="@+id/profile_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="100">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="30">

                            <ImageButton
                                android:id="@+id/con_profile_photo"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:background="@drawable/profile_circular_border_imageview"
                                android:elevation="5dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="40"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:weightSum="1"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                >

                                <RatingBar
                                    android:id="@+id/rating_bar_profile"
                                    android:scaleX=".8"
                                    android:scaleY=".8"
                                    android:transformPivotX="0dp"
                                    android:transformPivotY="0dp"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:numStars="5"
                                    android:stepSize=".2"
                                    android:rating="3"
                                    android:layout_gravity="center"
                                    />
                                <TextView
                                    android:layout_gravity="center"
                                    android:layout_weight="0.3"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:text="3.5"
                                    android:gravity="start"
                                    android:textSize="25sp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5">

                                <TextView
                                    android:id="@+id/con_big_profile_name"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Nix MAlONE"
                                    android:textColor="#070303"
                                    android:textSize="24sp"
                                    android:textStyle="bold"
                                    android:gravity="center" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="20"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/con_add_friend"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:clickable="true"
                                android:src="@drawable/ic_action_user_add"
                                android:layout_weight="0.5"/>

                            <ImageView
                                android:id="@+id/drop_down_option_menu"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:clickable="true"
                                android:src="@drawable/ic_action_overflow"
                                android:layout_weight="0.5"/>

                        </LinearLayout>


                    </LinearLayout>

                </android.support.v7.widget.CardView>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cardVV"
                    android:background="@color/colorPrimary"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/con_full_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_personne"
                        android:drawablePadding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/input_white_bg"
                        android:elevation="4dp"
                        android:padding="15dp"
                        android:text="Full Name" />

                    <TextView
                        android:id="@+id/con_email"
                        android:drawableLeft="@drawable/ic_mai_24dp"
                        android:drawablePadding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/input_white_bg"
                        android:elevation="4dp"
                        android:padding="15dp"
                        android:text="Email" />

                    <TextView
                        android:id="@+id/con_birth_date"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_calender_d_birth"
                        android:drawablePadding="5dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/input_white_bg"
                        android:elevation="4dp"
                        android:padding="15dp"
                        android:text="Date of birth" />

                    <TextView
                        android:id="@+id/con_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_phone_nmbr"
                        android:layout_margin="5dp"
                        android:padding="15dp"
                        android:background="@drawable/input_white_bg"
                        android:elevation="4dp"
                        android:text="Phone number" />

                    <TextView
                        android:id="@+id/con_wilaya"
                        android:layout_width="match_parent"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_willaya"
                        android:layout_height="wrap_content"
                        android:background="@drawable/input_white_bg"
                        android:elevation="4dp"
                        android:layout_margin="5dp"
                        android:padding="15dp"
                        android:text="Wilaya" />

                    <TextView
                        android:id="@+id/con_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_password"
                        android:background="@drawable/input_white_bg"
                        android:elevation="4dp"
                        android:layout_margin="5dp"
                        android:padding="15dp"
                        android:text="Password" />

                    <TextView
                        android:id="@+id/con_car_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_car_model"
                        android:background="@drawable/input_white_bg"
                        android:elevation="4dp"
                        android:layout_margin="5dp"
                        android:padding="15dp"
                        android:text="Car Model" />

                    <TextView
                        android:id="@+id/con_car_unique_nbe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/ic_car_plate"
                        android:background="@drawable/input_white_bg"
                        android:elevation="4dp"
                        android:layout_margin="5dp"
                        android:padding="15dp"
                        android:text="Car unique Number" />
                </LinearLayout>


            </RelativeLayout>
        </ScrollView>

        <android.support.design.widget.FloatingActionButton

            android:id="@+id/edit_con_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="32dp"
            android:src="@drawable/ic_edit" />

    </RelativeLayout>

</FrameLayout>