<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RidePostFragment">

    <com.google.android.gms.maps.MapView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mapPost" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1"
            android:background="@color/colorPrimaryDark">

            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/time"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/hour_ride"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24:00"
                        android:textStyle="bold"
                        android:textSize="45sp"
                        android:textColor="@color/generalTextCol"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="start"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/date_month_edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20 Dec"
                        android:textSize="21sp"
                        android:textColor="@color/generalTextCol"/>

                    <TextView
                        android:id="@+id/day_ride"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Saturday"
                        android:textSize="21sp"
                        android:textColor="@color/generalTextCol"/>


                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/driver_full_name"
                        android:text="Driver Name"
                        android:layout_weight="0.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textSize="20sp"
                        android:drawableLeft="@drawable/ic_driver_id"
                        android:textColor="@color/generalTextCol"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/car_model_in_ride"
                        android:gravity="center"
                        android:text="Car Model"
                        android:layout_weight="0.5"
                        android:textSize="15sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_car_model"
                        android:textColor="@color/generalTextCol"/>

                </LinearLayout>



            </LinearLayout>


            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="1.2">



                <LinearLayout
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/fStartPoint"
                        android:gravity="center"
                        android:text="Start Point"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_start_pp"
                        android:textColor="@color/generalTextCol"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/fEndPoint"
                        android:gravity="center"
                        android:text="End Point"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:drawableLeft="@drawable/ic_end_pp"
                        android:textColor="@color/generalTextCol"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="0.3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="end">


                    <TextView
                        android:id="@+id/distance"
                        android:gravity="center"
                        android:text="Distance : 24km"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textColor="@color/generalTextCol"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/check_perssones_ride"
                        android:gravity="center"
                        android:text="Check Passengers joined "
                        android:textSize="25sp"
                        android:layout_width="wrap_content"
                        android:drawableLeft="@drawable/ic_person_black"
                        android:layout_height="match_parent"
                        android:textColor="@color/generalTextCol"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.2"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/fActionBtn"
                        android:layout_weight="0.5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Take/Join"
                        android:background="@drawable/button_bg"
                        android:textColor="@color/generalTextCol"/>

                </LinearLayout>




                </LinearLayout>





        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>