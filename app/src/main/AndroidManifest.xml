<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.carpoolingappv1">

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".carpoolingappv1"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ReportPopupActivity"
            android:theme="@style/AppTheme.PopMe"/>
        <activity android:name=".change_password_con"></activity>
        <activity android:name=".change_password_pass" />
        <activity
            android:name=".ProfilePassengerPopupActivity"
            android:theme="@style/AppTheme.PopMe" />
        <activity
            android:name=".ProfileConductorPopupActivity"
            android:theme="@style/AppTheme.PopMe" />
        <activity android:name=".Edit_profile_Conductor" />
        <activity android:name=".Edit_profile_Passenger" />
        <activity android:name=".SignupPassengerActivity" />
        <activity android:name=".SignupConductorActivity" />
        <activity
            android:name=".search_pop_up"
            android:theme="@style/AppTheme.PopMe" />
        <activity
            android:name=".ChoosingUserType"
            android:theme="@style/AppTheme.PopMe" />
        <activity
            android:name=".CompeltPosting"
            android:theme="@style/AppTheme.PopMe" />
        <activity android:name=".AddPostActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>